{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": true
        },
        {
          "name": "lsof",
          "cmd": "lsof",
          "args": true
        },
        {
          "name": "taskkill",
          "cmd": "taskkill",
          "args": true
        },
        {
          "name": "kill",
          "cmd": "kill",
          "args": true
        }
      ]
    },
    "core:default",
    "opener:default",
    "shell:default",
    "shell:allow-kill",
    "os:default"
  ]
}